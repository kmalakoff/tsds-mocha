{
  "name": "tsds-mocha",
  "version": "1.21.4",
  "description": "Development stack for TypeScript libraries",
  "keywords": [
    "dev",
    "development",
    "mocha",
    "stack",
    "test",
    "typescript"
  ],
  "homepage": "https://github.com/kmalakoff/tsds-mocha",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/tsds-mocha.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "source": "src/index.ts",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "tsds format",
    "postinstall": "node ./scripts/postinstall.cjs",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "assert": "1.5.0",
    "cross-spawn-cb": "^2.4.11",
    "exit-compat": "^1.0.0",
    "getopts-compat": "^2.2.6",
    "link-unlink": "^1.0.10",
    "mocha": "^11.7.5",
    "mocha-compat": "^3.6.3",
    "mocha-no-node-protocol": "npm:mocha@11.1.0",
    "mocha-no-register-hooks": "npm:mocha@11.7.5",
    "queue-cb": "^1.6.1",
    "regenerator-runtime": "^0.14.1",
    "resolve": "^1.22.11",
    "resolve-bin-sync": "^1.0.10",
    "ts-swc-loaders": "^2.5.2",
    "tsds-lib": "^1.20.0",
    "unixify": "^1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.1",
    "module-link-unlink": "^1.0.9",
    "node-version-use": "^2.1.3",
    "os-shim": "^0.1.3",
    "short-hash": "^1.0.0",
    "ts-dev-stack": "^1.21.3",
    "tsds-config": "^0.2.0",
    "tsds-lib-test": "^1.19.4"
  },
  "engines": {
    "node": ">=0.8"
  }
}
